FROM ubuntu:18.10

RUN apt-get update 
RUN  apt-get install -y --no-install-recommends netbase nfs-kernel-server gcc build-essential vim xfsprogs net-tools libcurl4 && rm -rf /var/lib/apt/lists/*
RUN mkdir -p /nfs/share
VOLUME /nfs/share
EXPOSE 111/udp 2049/tcp 8000/tcp
COPY exports /etc/
COPY nfsd.sh /usr/bin/nfsd.sh
COPY nfsmount /bin/
RUN chmod +x /usr/bin/nfsd.sh 
COPY nfs-kernel-server /etc/default/
COPY nfs-common /etc/default/
